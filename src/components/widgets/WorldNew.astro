---
import { Image } from "astro:assets";
import WorldDynamicDots from "../../assets/media-resources/WorldDynamicDots.astro"
import WorldBlackIcon from "../../assets/media-resources/WorldBlackIcon.astro"
import WorldBlueIcon from "../../assets/media-resources/WorldBlueIcon.astro"
import WorldWhiteIcon from "../../assets/media-resources/WorldWhiteIcon.astro"
import planetImage from "../../assets/images/planet.png"
import planetAvatar1 from "src/assets/images/planet-avatar-01.png"
import planetAvatar2 from "src/assets/images/planet-avatar-02.png"

---

<section>
    <div class="max-w-6xl mx-auto px-4 sm:px-6 overflow-hidden">
        <div class="py-12 md:py-20">
            <!-- Section header -->
            <div class="max-w-2xl lg:max-w-3xl mx-auto text-center pb-12 md:pb-16">
                <h1 class=" text-[2.7rem] lg:text-[51px] font-[800] mb-4 leading-tight">Tickets To Pull Requests</h1>
                <p class="text-xl text-gray-600">Once you launch, we grow with you. Simply create a ticket and have it turned into production code by our global community. No meetings, just rapid development!</p>
            </div>
  
            <!-- World illustration -->
            <div class="flex flex-col items-center ">
                <div class="relative">
                    <!-- Halo effect -->
                    <div class=" absolute right-0 left-0 inset-0 bg-gray-400 animate-pulse w-[200px] h-[200px] md:w-[320px] md:h-[320px] rounded-full " ></div>
                    <div class=" absolute right-0 left-0 inset-0 bg-gray-400 animate-pulse1 w-[200px] h-[200px] md:w-[320px] md:h-[320px] rounded-full " ></div>
                    <div class=" absolute bg-gray-400 animate-pulse2 w-[200px] h-[200px] md:w-[320px] md:h-[320px] rounded-full " ></div>
                    <!-- Globe image -->
                    <Image 
                        class="relative rounded-full shadow-xl w-[200px] h-[200px] md:w-[320px] md:h-[320px] " 
                        src={planetImage} 
                        alt="Planet" 
                        decoding="async"
                        loading="lazy"
                        width={200}
                        height={200}
                    />
                    <!-- Dynamic dots -->
                    <WorldDynamicDots />
                        <div class="absolute max-w-full rounded-full w-3 h-3 bg-[#0070F4] top-[45%] left-[51%] animate-[ping_2000ms_infinite]"></div>
                        <div class="absolute max-w-full rounded-full w-3 h-3 bg-[#0070F4] top-[45%] left-[51%]"></div>
                        <div class="absolute max-w-full rounded-full w-4 h-4 bg-[#0070F4] top-[19%] left-[46%] animate-[ping_2000ms_infinite]"></div>
                        <div class="absolute max-w-full rounded-full w-4 h-4 bg-[#0070F4] top-[19%] left-[46%]"></div>
                  
                    <!-- Avatars -->
                    <div class="">
                        <Image 
                        class="absolute w-[65.25%] bottom-[75%] right-[-27%] max-w-full transform animate-[slowBounce_3000ms_infinite_1000ms]" 
                        src={planetAvatar1} 
                        alt="Planet avatar 01" 
                        decoding="async"
                        loading="lazy"
                        width={261}
                        height={105}
                    />
                    </div>
                    <Image 
                        class="absolute w-[88.7%] bottom-[-20%] right-[-18%] max-w-full transform animate-slowBounce animation-delay-1000" 
                        src={planetAvatar2} 
                        alt="Planet avatar 01" 
                        decoding="async"
                        loading="lazy"
                        width={355}
                        height={173}
                    />
                    <WorldBlackIcon />
                    <WorldBlueIcon />
                    <WorldWhiteIcon />
                </div>
            </div>
        </div>
    </div>
  </section>