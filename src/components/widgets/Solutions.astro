---
import DesignItem from "../ui/DesignItem.astro";
import WebDevelopmentItem from "../ui/WebDevelopmentItem.astro";
import AppDevelopmentItem from "../ui/AppDevelopmentItem.astro";
import TestingItem from "../ui/TestingItem.astro";
import BrandingItem from "../ui/BrandingItem.astro";
import ContinuedItem from "../ui/ContinuedItem.astro";

---

<section class="relative pt-16 lg:pt-6 pb-12  bg-gradient-to-b from-white to-gray-200/50 ">

    <!-- Section background (needs .relative class on parent and next sibling elements) -->
    <div class=" absolute inset-0 top-1/2  md:mt-24 lg:mt-0 bg-gray-900 pointer-events-none" aria-hidden="true"></div>
    <div class="absolute left-0 right-0 bottom-0 m-auto w-px p-px h-20  bg-gray-200 transform translate-y-1/2"></div>

    <div class="relative md:max-w-[90%] lg:max-w-6xl mx-auto px-4 sm:px-6">
        <div class=" pt-2 md:py-20 lg:pb-8 ">

            <!-- Section header -->
            <div class=" flex flex-col justify-center max-w-[45rem] lg:max-w-[48rem]  mx-auto text-center pb-12 md:pb-20">
                <p class="text-[2.6rem] md:text-5xl lg:text-[51px] leading-snug  font-[800]">Not Just An Agency</p>
                <h2 class="text-[2.6rem] md:text-5xl lg:text-[51px] leading-snug lg:leading-tight mt-2 md:mt-6 lg:mb-4 mb-4 font-[800]">Community</h2>
                <p class="text-[18px] lg:text-xl  text-gray-600 ">We build as a community in public, so as your product develops so does your reach. Launch with thousands of supporters backing your product.</p>
            </div>

            <!-- Items -->
            <div class="max-w-sm mx-auto grid gap-6 md:grid-cols-2 lg:grid-cols-3 items-start md:max-w-2xl lg:max-w-none">
                <DesignItem />
                <WebDevelopmentItem />
                <AppDevelopmentItem />
                <TestingItem />
               <BrandingItem />
               <ContinuedItem />
            </div>

        </div>
    </div>
</section>