                    loading="lazy"
                    width={450}
                    height={158}
                  />
                  <Image 
                    class="md:max-w-none absolute w-full left-0 bottom-0 transform animate-[slowBounce_3000ms_infinite_1000ms] top-[77%]" 
                    src={"/images/features-home-element-03.png"}
                    alt="Element 03" 
                    decoding="async"
                    loading="lazy"
                    width={450}
                    height={167}
                  />
                </div>
						</div>                                                
					</div>
				</div>
				
			</div>

		</div>
	</div> 
 </section> 